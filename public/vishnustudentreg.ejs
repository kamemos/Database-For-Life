<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }
        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 

        tab{padding-left: 20px;}
    
</style>

<body>
    <div class="flexbox">
        <% include vishnumenubar.ejs %>
        <div class="content">
            <br>
            <h2 align="center">ลงทะเบียนนิสิต</h2>
            <br>
            <br>
            <form action="/vishnustudentreg" method="post">
                <h5>รหัสนิสิต</h5>
                <input type="text" name="studentID" placeholder="Enter Student ID">
                <br>
                <br>
                <br>
                <h5>กรุ๊ปที่จะเข้า</h5>
                <input type="text" name="Groupname" placeholder="Enter Group Name">
                <br>
                <br>
                <br>
                <h5>ฝ่ายที่จะเข้า</h5>
                <input type="text" name="affname" placeholder="Enter Affiliation Name">
                <tab></tab>
                <input type="text" name="affyear" placeholder="Enter Affiliation Year">
                <br>
                <br>
                <br>
                <button type="submit" class="btn btn-success" formmethod="post">Register</button>
                <% if(typeof error !== "undefined") { %>
                    <br>
                    <br>
                    <h5 style="color:red;"><%= error %></h5>
                <% } %>
                <% if(typeof success != "undefined") { %>
                    <br>
                    <br>
                    <h5 style="color:green;"><%= success %></h5>
                <% } %>
            </form>
            <br>
        </div>
    </div>
</body>
<% include footer.ejs %>