<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }
        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 
    
</style>

<body>
    <div class="flexbox">
        <% include vishnumenubar.ejs %>
        <div class="content">
            <br>
            <h2 align="center">ข้อมูลนิสิต</h2>
            <br>
                <h5 align="center">Name : <%= Sname %></h5>
                <h5 align="center">Student ID : <%= Sid %></h5>
                <h5 align="center"><%= Faculty %></h5>
                <h5 align="center">Degree : <%= Educational_level %></h5>
                <br>
                <h5 align="center">Group : <%= Group_name %></h5>
                <h5 align="center">สถานะการเข้าร่วมส่วนกลาง : <%= Cdept_name %> </h5>
            <br>
            <h3 align="center">รายชื่อกิจกรรมที่นิสิตเข้าร่วม</h3>
            <table style="width:100%">
                <tr>
                    <td><h3>ชื่อกิจกรรม</h3></td>
                    <td><h3>ปีการศึกษา</h3></td>
                </tr>
                <% if(typeof result !== "undefined") result.forEach(function(result){ %>
                <tr>
                    <td><%= result.Aname %></td>
                    <td><%= result.Ayear %></td>
                </tr>
                <% }); %>
            </table>
        </div>
    </div>
</body>
<% include footer.ejs %>