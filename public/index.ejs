<% include header.ejs %>

<style>
    html, body {
        height: 100%;
        margin: 0;
        text-align: center;
        background-image: url('/public/assets/imgs/chulabg.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: 100%;
    }
    #loginbox {
        position: relative;
        top: 10%;
        padding: 10px;
        margin: auto;
        width: 400px;
        height: 70%;
        border-radius: 10px;
        background-color:#f4f4f4c9;
    }
    img.usericon {
        margin: auto;
        width: 150px;
        height: 150px;
    }
    .welcome {
        position: relative;
        top: 5%;
        font-size: 60px;
        color: black;
    }
</style>
<body>
    <h1 class="welcome">Welcome to Reg Chula</h1>
    <div id="loginbox">
        <img class="usericon" src="/public/assets/imgs/student.png"/>
        <div style="height:30px"></div>
        <p style="color:red"><%= msg %></p>
        <form action="/login" method="POST">
            <div class="form-group">
                <i class="fas fa-user"></i>
                <label for="inputAddress">Student ID</label>
                <input style="width:80%;margin:auto" name="username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <i class="fas fa-key"></i>
                <label for="inputAddress">Password</label>
                <input style="width:80%;margin:auto" name="password" type="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</body>
<% include footer.ejs %>