<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }
        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 
    
</style>

<body>
    <div class="flexbox">
        <% include vishnumenubar.ejs %>
        <div class="content">
            <br>
            <h3 align="center">เพิ่มนิสิตที่เข้าร่วมกิจกรรม <%= Aname %></h3>
            <br>
            <% let url = Aname %>
            <form class="form-inline" action="<%= url %>" method="post">
                <div class="col-md-5">
                    <label>รหัสนิสิต</label>
                    <input type="text" name="Sid" class="form-control">
                </div>
                <div class="col-md-5">
                    <label>ปีการศึกษา</label>
                    <input type="text" name="Ayear" class="form-control">
                </div>

                <br>
                
                <!-- _________________________ -->

                <div class="col-md-2">
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
<% include footer.ejs %>