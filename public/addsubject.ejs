<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }

        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
        }

        form.form-inline{
            float: left;
            width: 800px;
            padding: 0;
            margin-top: 50px;
        }

        input.form-control{
            margin-top: 10px;
            margin-bottom: 2px;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 
</style>

<body>
    <div class="flexbox">
        <% include menubar.ejs %>
        <div class="content">
            <form class="form-inline" method="post">
                <div class="col-md-5">
                    <label for="subjectCode">Subject Code</label>
                    <input type="text" name="subjCode1" class="form-control">
                    <input type="text" name="subjCode2" class="form-control">
                </div>
                <div class="col-md-5">
                    <label for="sectionNo">Section Number</label>
                    <input type="text" name="secNo1" class="form-control">
                    <input type="text" name="secNo2" class="form-control">
                </div>
                <div class="col-md-2">
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
<% include footer.ejs %>