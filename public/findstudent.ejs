<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }
        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 
    
</style>

<body>
    <div class="flexbox">
        <% include vishnumenubar.ejs %>
        <div class="content">
            <br>
            <h2 align="center">ค้นหาข้อมูลนิสิต</h2>
            <br>
            <form class="form-inline" action="/findstudent" method="post">
                <div class="col-md-5">
                    <label for="StudentCode">Student ID</label>
                    <input type="text" name="SID" class="form-control">
                </div>
                <div class="col-md-2">
                    <button type="Submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            <br>
            <% if(typeof result !== "undefined")result.forEach(function(result){ %>
                <h4 align="center">ข้อมูลนิสิต</h4>
                <br>
                <h5 align="center">Name : <%= result.Sname %></h5>
                <h5 align="center">Student ID : <%= result.Sid %></h5>
                <h5 align="center"><%= result.Faculty %></h5>
                <h5 align="center">Degree : <%= result.Educational_level %></h5>
                <br>
                <h5 align="center">Group : <%= result.Group_name %></h5>
                <h5 align="center">สถานะการเข้าร่วมส่วนกลาง : <%= result.Cdept_name %> </h5>
            <% }); %>
            <br>
        </div>
    </div>
</body>
<% include footer.ejs %>