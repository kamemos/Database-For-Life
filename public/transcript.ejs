<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }
        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        button{
            padding: 15px 32px;
            float: left;
        }

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 
        
        h1{
            padding-left: 40px;
            padding-top: 20px;
        }

        h2{
            padding-left: 40px;
            padding-top: 20px;
        }
        
        h5{
            padding-left: 40px; 
            min-width: 500px;
            max-width: 500px;
        }
</style>

<body>
    <div class="flexbox">
        <div class="menubar">
            <br>
            <img class="schoolimg" src="/public/assets/imgs/chulalogo.png"/>
            <div style='height:20px;'></div>
            <p>นักเรียน</p>
            <table class="mytable table table-hover" cellspacing="0" cellpadding="0">
                <tbody style="width:100%;">
                    <tr>
                        <td class="icon" ><i class="far fa-plus-square" style="height:30px;width:auto;"></i></td>
                        <td><a href="/addsubject">เพิ่มรายวิชา</a></td>
                    </tr>
                    <tr>
                        <td class="icon" ><i class="far fa-minus-square" style="height:30px;width:auto;"></i></td>
                        <td><a href="/">ลดรายวิชา</a></td>
                    </tr>
                    <tr>
                        <td class="icon" ><i class="fas fa-graduation-cap" style="height:30px;width:auto;"></i></td>
                        <td><a href="/">ดูเกรดรายวิชา</a></td>
                    </tr>
                    <tr>
                        <td class="icon" ><i class="far fa-list-alt" style="height:30px;width:auto;"></i></td>
                        <td><a href="/">ขอใบ transcript</a></td>
                    </tr>
                    <tr>
                        <td class="icon" ><i class="far fa-address-card" style="height:30px;width:auto;"></i></td>
                        <td><a href="/">ขอใบสำเร็จการศึกษา</a></td>
                    </tr>
                    <tr>
                        <td class="icon" ><i class="fas fa-external-link-alt" style="height:25px;width:auto;"></i></td>
                        <td><a href="/logout">ออกจากระบบ</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="content">
            <!-- put the content here -->
            <h1 align="left">Transcript</h1>
            <br>
                <h5 align="left">Name <%= Sname %></h5>
                <h5 align="left">Student ID <%= Sid %></h5>
                <h5 align="left"><%= Faculty %></h5>
                <h5 align="left">Program <%= program %></h5>
                <h5 align="left">Degree <%= Educational_level %></h5>
                <% var check = 0 %>
                <% var cumgpa = 0 %>
                <% var cumgpax = 0 %>
                <% var cumcredit = 0 %>
                <% var cumcreditx = 0 %>
                <% var gpa = 0 %>
                <% var gpax = 0 %>

                    <% for(var i = 0; i < out.length; i++) { %>
                        <% if(out[i].Ssemester == 1 && check != 1) { %>
                            <% if(check != 0) { %> 
                                </table>

                                <table style="width:100%">
                                        <tr>
                                            <th>GPA <% gpa %></th>
                                            <th>GPAX <% gpax %></th>
                                        </tr>
                                        <tr>
                                                <td><%= (cumgpa / cumcredit).toFixed(2) %></td>
                                                <td><%= (cumgpax / cumcreditx).toFixed(2) %></td>
                                        </tr>
                                </table>
                                
                                <% cumgpa = 0 %>
                                <% cumcredit = 0 %>
                            <% } %>

                            <% check = 1 %>

                            <h2 align="center">ภาคการศึกษาต้น ปีการศึกษา <%= out[i].Syear %></h2>
                            <br>
                            <table style="width:100%">
                            <tr>    
                                    <th>COURSE NO</th>
                                    <th>COURSE TITLE</th> 
                                    <th>CREDIT</th>
                                    <th>GRADE</th>
                            </tr>
                        <% } %>
    
                        <% if (out[i].Ssemester == 2 && check != 2) { %>
                            <% check = 2 %>
                            </table>

                            <table style="width:100%">
                                <tr>
                                    <th>GPA</th>
                                    <th>GPAX</th>
                                </tr>
                                <tr>
                                    <td><%= (cumgpa / cumcredit).toFixed(2) %></td>
                                    <td><%= (cumgpax / cumcreditx).toFixed(2) %></td>
                                </tr>
                                <% cumgpa = 0 %>
                                <% cumcredit = 0 %>
                            </table>

                            <h2 align="center">ภาคการศึกษาปลาย ปีการศึกษา <%= out[i].Syear %></h2>
                            <br>
                            <table style="width:100%">
                            <tr>
                                    <th>COURSE NO</th>
                                    <th>COURSE TITLE</th> 
                                    <th>CREDIT</th>
                                    <th>GRADE</th>
                            </tr>
                        <% } %>

                        <tr>
                          <td><%= out[i].Scode %></td>
                          <td><%= out[i].Sname %></td>
                          <td><%= out[i].Scredit %></td>
                          <td><%= out[i].Sgrade %></td>
                        
                          <% var calgrade = 0 %>
                          <% if(out[i].Sgrade == "A") { %>
                            <% calgrade = 4 %>
                          <% } %>
                          <% if(out[i].Sgrade == "B+") { %>
                            <% calgrade = 3.5 %>
                          <% } %>
                          <% if(out[i].Sgrade == "B") { %>
                            <% calgrade = 3 %>
                          <% } %>
                          <% if(out[i].Sgrade == "C+") { %>
                            <% calgrade = 2.5 %>
                          <% } %>
                          <% if(out[i].Sgrade == "C") { %>
                            <% calgrade = 2 %>
                          <% } %>
                          <% if(out[i].Sgrade == "D+") { %>
                            <% calgrade = 1.5 %>
                          <% } %>
                          <% if(out[i].Sgrade == "D") { %>
                            <% calgrade = 1 %>
                          <% } %>

                          <% cumgpa = cumgpa + calgrade * out[i].Scredit %>
                          <% cumgpax = cumgpax + calgrade * out[i].Scredit %>
                          <% cumcredit = cumcredit + out[i].Scredit %>
                          <% cumcreditx = cumcreditx + out[i].Scredit %>
                        </tr>

                        <% if(i == out.length - 1) { %>
                            </table>
                            <table style="width:100%">
                                    <tr>
                                        <th>GPA <% gpa %></th>
                                        <th>GPAX <% gpax %></th>
                                    </tr>
                                    <tr>
                                        <td><%= (cumgpa / cumcredit).toFixed(2) %></td>
                                        <td><%= (cumgpax / cumcreditx).toFixed(2) %></td>
                                    </tr>
    
                            </table>
                            <% cumgpa = 0 %>
                            <% cumcredit = 0 %>
                        <% } %>
                    <% } %>
                </table>

            <button type="button" class="btn btn-dark">ขอ Transcript</button>
        </div>
    </div>
</body>
<% include footer.ejs %>

