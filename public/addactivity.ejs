<% include header.ejs %>
<style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }
        div.flexbox {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
        }

        div.menubar {
            float: left;
            background-color: #f4f4f4c9;
            width: 300px;
            height: 100%;
        }

        .schoolimg {
            height: 150px; 
            width: auto; 
        }

        div.menubar > ul {
            position: relative;
            margin-right: auto;
            margin-left: auto;
            padding-left: 0;
            padding: 0;
        }
        
        div.content{
            position: relative;
            float: left;
            height: 100%;
            width: 100%;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        #hangbottom {
            position: relative;
            bottom: 10%;
            width: 40%;
            top: 300px;
        }
        
        table { 
            position: relative;
            margin: auto;
            border: none;
        } 

        tr {
            width: 100%;
            border: none;
        }
        tr:hover {
            background-color: #ffff99;
        }
        td.icon{
            padding-right: 10px;
        }

        a { 
            color: inherit; 
        } 
    
</style>

<body>
    <div class="flexbox">
        <% include vishnumenubar.ejs %>
        <div class="content">
            <br>
            <h2 align="center">เพิ่มกิจกรรม</h2>
            <br>
            <form class="form-inline" action="addactivity" method="post">
                <div class="col-md-5">
                    <label for="subjectCode">Activity Name</label>
                    <input type="text" name="Aname" class="form-control">
                </div>

                <div class="col-md-5">
                    <label for="sectionNo">Acitvity Year</label>
                    <input type="text" name="Ayear" class="form-control">
                </div>

                <div class="col-md-5">
                    <label for="sectionNo">Held Place</label>
                    <input type="text" name="Place" class="form-control">
                </div>

                <br>
                <!-- _________________________ -->

                <div class="col-md-5">
                    <label for="sectionNo">Date</label>
                    <label for="format1">(YYYY-MM-DD)</label>
                    <input type="text" name="Date" class="form-control">
                </div>

                <div class="col-md-5">
                    <label for="sectionNo">Begin Time</label>
                    <label for="format1">(HH:MM)</label>
                    <input type="text" name="Btime" class="form-control">
                </div>

                <div class="col-md-5">
                    <label for="sectionNo">End Time</label>
                    <label for="format1">(HH:MM)</label>
                    <input type="text" name="Etime" class="form-control">
                </div>
                <div class="col-md-2">
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
                <% if(typeof error !== "undefined") { %>
                    <br>
                    <br>
                    <h5 style="color:red;"><%= error %></h5>
                <% } %>
                <% if(typeof success != "undefined") { %>
                    <br>
                    <br>
                    <h5 style="color:green;"><%= success %></h5>
                <% } %>
            </form>
            
        </div>
    </div>
</body>
<% include footer.ejs %>